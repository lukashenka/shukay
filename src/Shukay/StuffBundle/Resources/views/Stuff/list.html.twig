{% extends "ShukayStuffBundle:Stuff:layout.html.twig" %}
{% block content %}
    <h1>Stuff list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('stuff_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.picture }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('stuff_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('stuff_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('stuff_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
